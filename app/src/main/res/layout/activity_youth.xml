<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    tools:context="com.example.sanket.sdg_india.YouthActivity">

    <ImageView
        android:id="@+id/susimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:transitionName="youthimage"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/youth" />

    <TextView
        android:id="@+id/sustext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/susimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:text="How can youth contribute to SDGs?"
        android:textSize="25dp"
        android:transitionName="youthtext" />
</RelativeLayout>
