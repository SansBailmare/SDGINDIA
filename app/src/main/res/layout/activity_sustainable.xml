<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    tools:context="com.example.sanket.sdg_india.SustainableActivity">

    <ImageView
        android:id="@+id/susimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:transitionName="susimage"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/sdgwheel" />

    <TextView
        android:id="@+id/sustext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/susimage"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:transitionName="sustext"
        android:text="What are Sustainable Development Goals (SDGs)?"
        android:textSize="25dp" />
</RelativeLayout>
